@page
@model Blog.Pages.Admin.BlogPosts.ListModel
@{
}



<div class="bg-secondary bg-oppacity-5 py-2 mb-5">
    <div class="container">
        <h1> Wszystkie posty </h1>
    </div>
</div>

<div class="container">
    <table class="table"> 
        <thead>
            <tr>
                <td>Id</td>
                <td>Nagłówek</td>
                <td> </td>
            </tr>
        </thead>
        <tbody> 
            @foreach (var blogPost in Model.BlogPosts)
            {
                <tr>
                    <td>@blogPost.Id</td>
                    <td>@blogPost.Heading</td>
                    <td><a href="/Admin/BlogPosts/Edit/@blogPost.Id">Pokaż sczegóły / Edytuj</a></td>
                </tr>
            }
        </tbody>
    </table>
    </div>